<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="5dp"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:paddingVertical="8dp" >

        <TextView
            android:id="@+id/tvVerdura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/tv_verdura" />

        <Button
            android:id="@+id/bEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_error"
            android:text="@string/eliminate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/cbCubierto"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="@string/tv_cubierto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bEliminar"
            app:layout_constraintWidth_percent="0.5" />


        <CheckBox
            android:id="@+id/cbCosecha"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="@string/tv_Cosecha"
            app:layout_constraintStart_toEndOf="@+id/cbCubierto"
            app:layout_constraintTop_toBottomOf="@+id/bEliminar"
            app:layout_constraintWidth_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>