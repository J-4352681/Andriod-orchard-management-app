<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/bolson_modify"
    tools:context=".ui.bolson.modify.BolsonModifyFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="8pt"
        tools:text="Id del bolson" />


    <TextView
        android:id="@+id/tvCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:textSize="6pt"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:ignore="MissingConstraints"
        android:text="Cantidad" />

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese cantidad"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidad"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tvRonda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:textSize="6pt"
        app:layout_constraintTop_toBottomOf="@+id/etCantidad"
        tools:ignore="MissingConstraints"
        android:text="Ronda" />

    <EditText
        android:id="@+id/etRonda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese ronda"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/tvRonda"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tvFamilia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:textSize="6pt"
        app:layout_constraintTop_toBottomOf="@+id/etRonda"
        tools:ignore="MissingConstraints"
        android:text="Familia" />

    <EditText
        android:id="@+id/etFamilia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese familia"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@+id/tvFamilia"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bGuardar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Guardar"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etFamilia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Borrar"
        style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etFamilia"
        app:layout_constraintLeft_toRightOf="@+id/bGuardar"/>

</androidx.constraintlayout.widget.ConstraintLayout>